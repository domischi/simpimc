<Input>
  <RNG seed="12345" />
  <IO outputPrefix="H" />
  <Parallel procsPerGroup="1" />
  <System nD="3" nBead="160" beta="20.0" L="100.0" PBC="0" />
  <Particles>
    <Species name="e" type="e" nPart="1" lambda="0.5" fermi="0" />
    <Species name="p" type="p" nPart="1" lambda="0.0" fermi="0" />
  </Particles>
  <Init type="File" name="positions.dat" />
  <Actions>
    <Action name="Kinetic" type="Kinetic" nImages="0" />
    <Action name="Coulomb" type="PairAction" file="e-p.sq.h5" nOrder="3" nImages="0" speciesA="e" speciesB="p" Z1Z2="-1" maxLevel="0" />
    <!--Action name="Coulomb" type="Coulomb" nOrder="2" nImages="0" speciesA="e" speciesB="p" Z1Z2="-1" maxLevel="0" /-->
  </Actions>
  <Moves>
    <Move name="BisectE" type="Bisect" species="e" maxLevel="4" />
  </Moves>
  <Observables>
    <Observable name="Energy" type="Energy" skip="1" />
    <Observable name="Time" type="Time" />
  </Observables>
  <Algorithm>
    <Loop nStep="100">
      <Loop nStep="1000">
        <Loop nStep="100">
          <Move name="BisectE" />
        </Loop>
        <Observable name="Energy" />
      </Loop>
      <Write />
    </Loop>
  </Algorithm>
</Input>
